<h1>Angular Portfolio items</h1>

<%= link_to "create new portfolio", new_portfolio_path%>

<% @angular_portfolio_items.each do |portfolio_item| %>
<!-- passing argument without id, rails know to pickup the current portfolio id -->
<p> <%= link_to portfolio_item.title, portfolio_show_path(portfolio_item) %> </p>
<p> <%= portfolio_item.subtitle %> </p>
<p> <%= portfolio_item.body %> </p>
<%= image_tag portfolio_item.thumb_image if portfolio_item.thumb_image.present? %> 
<%= link_to "Edit", edit_portfolio_path(portfolio_item.id)%>
<!-- A second way to generate the edit through the html form -->
<a href="/portfolios/<%= portfolio_item.id %>/edit">Edit2</a>
<td><%= link_to 'Delete portfolio_item', portfolio_path(portfolio_item), method: :delete, data: { confirm: 'Are you sure?' } %></td>
<% end %>